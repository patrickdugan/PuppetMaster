{
  "name": "puppetmaster",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "QA harness for Vite apps and static HTML with Playwright + GPT-5-mini.",
  "scripts": {
    "qa": "node src/qa.js",
    "qa:probe:sweepweave": "node scripts/probe-sweepweave-pvalues.mjs",
    "vision:rotator": "tsx scripts/vision-rotator.ts",
    "research:x-leads": "tsx scripts/x-lead-research.ts",
    "research:x-tradelayer": "tsx scripts/x-tradelayer-fit.ts",
    "research:x-vip-list": "tsx scripts/x-vip-list-capture.ts",
    "agent:telegram": "tsx scripts/telegram-agent.ts",
    "agent:telegram:schedule": "powershell -ExecutionPolicy Bypass -File scripts/setup-telegram-scheduled-task.ps1",
    "agent:android": "tsx scripts/android-agent.ts",
    "etherscan:scrape": "node scripts/scrape-etherscan-2025.mjs",
    "desktop:probe": "node src/desktop.js",
    "desktop:mission": "node src/desktop-mission.js",
    "desktop:loop": "node src/desktop-loop.js",
    "mission": "node src/mission-runner.js",
    "install:browsers": "npx playwright install --with-deps",
    "lint": "node scripts/lint.js"
  },
  "dependencies": {
    "@google-cloud/vision": "^5.3.1",
    "sharp": "^0.34.4",
    "playwright": "^1.49.0"
  },
  "devDependencies": {
    "tsx": "^4.20.5",
    "typescript": "^5.9.3"
  }
}
